@using Task1
@using Task2.Models.Todo;
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Todo/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Todo Items</title>
</head>
<body>
    <h2>Todo</h2>
    <div style="margin-bottom:50px">
        <a asp-action="Add" style="display:inline-block; text-decoration:none; color:#0000FF; margin-right:20px;">Add new todos</a>
        <a asp-action="Completed" style="display:inline-block; text-decoration:none; color:#0000FF;">See completed todos</a>
    </div>
    @foreach (var item in Model.TodoViewModels)
    {
        <div style="margin-bottom:30px">
            @Html.Partial("TodoPartial", item)
            <a asp-action="MarkAsCompleted" asp-route-Id="@item.Id" style="color:blue; margin-bottom:30px;">Mark as completed</a>
        </div>
    }
</body>
</html>


