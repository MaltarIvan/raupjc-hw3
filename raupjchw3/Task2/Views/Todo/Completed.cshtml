@using Task1
@using Task2.Models.Todo;
@model CompletedViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Completed";
    Layout = "~/Views/Todo/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Completed items</title>
</head>
<body>
    <h2 style="margin-bottom=50px">Completed Todos</h2>
    @foreach (var item in Model.TodoViewModels)
    {
        <h4>@item.Text</h4>
        <p>@item.getDateCompletedShort()</p>
        <a asp-action="RemoveFromCompleted" asp-route-Id="@item.Id" style="color:blue">Remove from completed</a>
    }
</body>
</html>