@using Task2.Models.Todo;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddTodoViewModel
@{
    ViewData["Title"] = "AddNewTodo";
    Layout = "~/Views/Todo/_Layout.cshtml";
}

<h2>AddNewTodo</h2>
<form asp-action="Add" method="post">
    Text: <input asp-for="Text"/><span asp-validation-for="Text" style="color:red"></span><br />
    Date due: <input asp-for="DateDue"/><span asp-validation-for="DateDue"></span><br />
    Labels (Split with ' , '): <input asp-for="Labels"/><span asp-validation-for="Labels"></span><br />
    <input type="submit" />
    </form>